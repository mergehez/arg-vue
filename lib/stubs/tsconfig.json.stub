{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "lib": ["esnext", "dom"],
        "types": ["@types/node"],
        "paths": {
            "@/*": ["./resources/js/*"],
//            "@argvue/*": ["../arg-vue/lib/*"],
            "@argvue/*": ["./node_modules/arg-vue/lib/*"],
        },
        "outDir": "./public/build/assets",
        "typeRoots": [
            "./node_modules/@types",
            "resources/js/Types",
            "./node_modules/arg-vue/lib/utils",
            "./node_modules/arg-vue/lib/utils/app.d.ts"
        ]
    },
    "typeRoots": [
        "./node_modules/@types",
        "resources/js/Types",
        "./node_modules/arg-vue/lib/utils/app.d.ts"
    ],
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue",
        "./node_modules/arg-vue/lib/**/*.ts",
        "./node_modules/arg-vue/lib/**/*.d.ts",
        "./node_modules/arg-vue/lib/**/*.vue",
        "public/translations.js",
    ],
    "exclude": ["node_modules", "public"]
}
